---
import { Download, Linkedin } from "lucide-react";
import { MYLINKS } from "@data/db";
import Button from "@components/shared/Button.astro";
const {CV, GITHUB, LINKEDIN } = MYLINKS;
---

<article
  id="hero"
  class="px-4 flex flex-col-reverse items-center justify-evenly md:flex-row md:justify-between min-h-[80vh] text-dark-text"
>
  <section class="flex flex-col md:gap-8 text-center items-center">
    <h1 class="text-2xl md:text-3xl mb-4 max-w-[20ch]">
      Hola, soy <strong class="text-dark-primary">Angel Añez</strong> y me dedico
      al Desarrollo de Software
    </h1>
    <h2 class="text-lg md:text-xl">¡Encantado de Conocerte!</h2>
    <section
      class="flex flex-col md:flex-row mt-5 justify-evenly gap-1 md:gap-5 items-center md:mt-0"
    >
      <Button url=`${CV}`>
        Descargar CV
        <Download />
      </Button>
      <ul class="flex py-4 justify-center items-center gap-4">
        <li
          class="rounded-full p-3 border border-dark-primary text-dark-primary hover:bg-dark-primary hover:bg-opacity-80 hover:text-black transition-colors cursor-pointer"
        >
          <a
            href=`${GITHUB}`
            title="Enlace a mi GitHub"
            aria-label="Enlace a mi GitHub"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-github"
              ><path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
            ></a
          >
        </li>
        <li
          class="rounded-full p-3 cursor-pointer border border-dark-primary text-dark-primary hover:bg-dark-primary hover:bg-opacity-80 hover:text-black transition-colors"
        >
          <a
            href=`${LINKEDIN}`
            title="Enlace a mi LinkedIn"
            aria-label="Enlace a mi LinkedIn"
          >
            <Linkedin />
          </a>
        </li>
      </ul>
    </section>
  </section>
  <img
    class="rounded-full w-52 md:w-96 aspect-square select-none"
    src="/images/profile-hero.webp"
    alt="Angel Añez"
  />
</article>
