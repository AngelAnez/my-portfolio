---
import Card from "@components/pieces/Card.astro";
import Title from "@components/pieces/Title.astro";
import { PROJECTS as projects } from "@data/db";
---

<section id="projects" class="pt-12 md:pt-24 px-4">
  <Title>Proyectos</Title>
  <ul class="flex flex-col gap-6 py-6 justify-items-center">
    {
      projects.map((project) => {
        return (
          <li>
            <Card project={project} />
          </li>
        );
      })
    }
  </ul>
</section>
