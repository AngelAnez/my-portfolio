---
import { FileText, Linkedin } from "lucide-react";
import Button from "./pieces/Button.astro";
---

<article
  id="hero"
  class="py-16 px-8 flex flex-col-reverse items-center justify-evenly md:flex-row md:justify-between h-screen"
>
  <section class="flex flex-col md:gap-8 text-center">
    <h1 class="text-4xl mb-4 max-w-[20ch]">
      Hola, soy <strong class="text-primary">Angel Añez</strong> y me dedico al Desarrollo
      de Software
    </h1>
    <h2 class="text-2xl">¡Encantado de Conocerte!</h2>
    <section class="flex mt-10 justify-evenly gap-3 items-center md:mt-0">
      <Button url="/documents/docker.pdf">
        Descargar CV
        <FileText />
      </Button>
      <ul class="flex py-4 justify-center items-center gap-4 md:gap-6">
        <li>
          <a
            href="https://github.com/AngelAnez"
            class="text-white transition-colors hover:text-primary"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-github"
              ><path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
            ></a
          >
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/angeldavid2001/"
            class="text-white transition-colors hover:text-primary"
          >
            <Linkedin />
          </a>
        </li>
      </ul>
    </section>
  </section>
  <img
    class="rounded-full w-60 md:w-96 aspect-square"
    src="/images/profile.webp"
    alt="My Profile Photo"
  />
</article>
