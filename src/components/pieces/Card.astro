---
import { Play, Container } from "lucide-react";
const { project } = Astro.props;
---

<article
  class="bg-dark-background-secondary border-2 rounded-lg p-5 flex flex-col md:flex-row justify-between gap-4 hover:border-dark-primary transition-colors"
>
  <figure class="md:w-[45%] flex items-center">
    <img
      class="rounded-lg"
      loading="lazy"
      decoding="async"
      src=`/images/${project.image}`
      alt={project.title}
    />
  </figure>
  <section class="flex flex-1 flex-col justify-between">
    <section class="flex flex-col gap-3">
      <h3 class="text-base md:text-xl font-bold">{project.title}</h3>
      {project.description.map((paragraph) => <p class="text-sm md:text-base">{paragraph}</p>)}
      <ul class="grid grid-cols-4 md:grid-cols-6 lg:grid-cols-8 gap-3 px-4">
        {
          project.stack.map((tech) => (
            <li>
              <img
                class="w-[48px] aspect-square text-white mx-auto"
                src={"/images/" + tech.toLowerCase() + ".svg"}
                alt={`${tech} logo`}
                loading="lazy"
                decoding="async"
              />
            </li>
          ))
        }
      </ul>
    </section>
    <section class="flex gap-x-2 justify-end mt-4">
      {
        project.demo && (
          <a
            href={project.demo}
            class="px-2 py-1 rounded-full text-center flex hover:text-dark-primary"
            title="Ver una demostración del proyecto"
            aria-label="Ver una demostración del proyecto"
          >
            <Play className="size-7" />
          </a>
        )
      }

      {
        project.github && (
          <a
            href={project.github}
            class="px-2 py-1 rounded-full text-center flex hover:text-dark-primary"
            title="Ir al repositorio del proyecto en GitHub"
            aria-label="Ir al repositorio del proyecto en GitHub"
            target="_blank"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-github size-7"
            >
              <>
                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                <path d="M9 18c-4.51 2-5-2-7-2" />
              </>
            </svg>
          </a>
        )
      }

      {
        project.docker && (
          <a
            href={project.docker}
            class="px-2 py-1 rounded-full text-center flex hover:text-dark-primary"
            title="Ir al repositorio de la imagen del proyecto en DockerHub"
            aria-label="Ir al repositorio de la imagen del proyecto en DockerHub"
            target="_blank"
          >
            <Container className="size-7" />
          </a>
        )
      }
    </section>
  </section>
</article>
