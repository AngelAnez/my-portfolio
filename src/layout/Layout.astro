---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/Layout.css";
import "@fontsource/noto-sans-math";

interface Props {
  title?: string;
}

const { title = "Angel Añez | Software Developer" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="title"
      property="og:title"
      content="Angel Añez | Software Developer"
    />
    <meta name="type" property="og:type" content="website" />
    <meta
      name="url"
      property="og:url"
      content="https://angel-anez.vercel.app/"
    />

    <meta
      name="description"
      property="og:description"
      content="Hola, soy Angel Añez. Soy un Ingeniero de Sistemas y me dedico al Desarrollo de Software. ¡Bienvenido a mi Portafolio!"
    />
    <meta
      name="keywords"
      content="Angel Añez, Angel Anez, Desarrollador de Software, Ingeniero de Sistemas"
    />
    <title>{title}</title>
    <link rel="icon" type="image/svg" href="/favicon.svg" />
  </head>
  <body class="bg-dark-background-primary text-white">
    <main class="container mx-auto px-5 max-w-6xl">
      <Header />
      <slot />
      <Footer />
    </main>
  </body>
</html>
