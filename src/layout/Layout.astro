---
import { ClientRouter } from "astro:transitions";
import "@styles/global.css";
import "@fontsource/noto-sans-math";
import Navbar from "@components/shared/Navbar.astro";
import Footer from "@components/shared/Footer.astro";

interface Props {
  title?: string;
}

const { title = "Angel Añez | Home" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="title"
      property="og:title"
      content="Angel Añez | Software Developer"
    />
    <meta name="type" property="og:type" content="website" />
    <meta
      name="url"
      property="og:url"
      content="https://angel-anez.vercel.app/"
    />

    <meta
      name="description"
      property="og:description"
      content="Hola, soy Angel Añez. Soy un Ingeniero de Sistemas y me dedico al Desarrollo de Software. ¡Bienvenido a mi Portafolio!"
    />
    <meta
      name="keywords"
      content="Angel Añez, Angel Anez, Desarrollador de Software, Ingeniero de Sistemas"
    />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg" />

    <!-- Light mode favicon -->
    <link
      rel="icon"
      href="/favicon-light.svg"
      type="image/svg"
      media="(prefers-color-scheme: light)"
    />

    <!-- Dark mode favicon -->
    <link
      rel="icon"
      href="/favicon-dark.svg"
      type="image/svg"
      media="(prefers-color-scheme: dark)"
    />

    <ClientRouter />
  </head>
  <body class="bg-background text-white font-body flex flex-col">
    <Navbar />
    <main class="mx-auto px-5 max-w-6xl min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>
